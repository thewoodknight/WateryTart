<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WateryTart.Core.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WateryTart.Core.Views.LoginView"
             x:DataType="vm:LoginViewModel">
  <Grid>
      <StackPanel Width="300">
          <TextBlock FontSize="30" FontWeight="Black">Login</TextBlock>
          <Label Margin="0,20,0,0" Content="Server" />
          <TextBox Height="17" TextWrapping="Wrap" Text="{Binding Server}" Watermark="my_server_ip:8095"/>
          <Label Content="Username" Margin="0,20,0,0" />
          <TextBox Height="17" TextWrapping="Wrap" Text="{Binding Username}" Watermark="Username"/>
          <Label  Content="Password" Margin="0,20,0,0" />
          <TextBox PasswordChar="*" Watermark="Password" Height="17" TextWrapping="Wrap" Text="{Binding Password}"/>
          <Button Command="{Binding LoginCommand}" Margin="0,20,0,0" >Sign in</Button>
      </StackPanel>
  </Grid>
</UserControl>
