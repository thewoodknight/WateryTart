<UserControl
    x:Class="WateryTart.Core.Views.KeyboardVolumeKeyBindingsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:WateryTart.Core.Views"
    xmlns:vm="clr-namespace:WateryTart.Core.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:KeyboardVolumeKeyBindingsViewModel"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Spacing="20">
            <!--  Header  -->
            <StackPanel Spacing="8">
                <TextBlock
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Keyboard Shortcuts" />
                <TextBlock FontSize="12" Text="Configure keyboard bindings for media controls" />
            </StackPanel>

            <!--  Reset to Defaults Button  -->
            <Button
                Padding="12,8"
                HorizontalAlignment="Left"
                Command="{Binding ResetToDefaultsCommand}">
                Reset to Defaults
            </Button>

            <!--  Recording Status  -->
            <Border
                Padding="12"
                BorderThickness="1"
                CornerRadius="4"
                IsVisible="{Binding IsRecording}">
                <TextBlock FontWeight="SemiBold" Text="Press any key to bind..." />
            </Border>

            <!--  Keyboard Bindings List  -->
            <StackPanel Spacing="12">

                <!--  Play Binding  -->
                <Border
                    Padding="16"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid ColumnDefinitions="*,150">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="Play" />
                            <TextBlock FontSize="11" Text="Start playback" />
                        </StackPanel>
                        <Button
                            Grid.Column="1"
                            Padding="8"
                            Command="{Binding RecordKeyCommand}"
                            CommandParameter="Play">
                            <TextBlock Text="{Binding PlayBinding}" />
                        </Button>
                    </Grid>
                </Border>

                <!--  Next Binding  -->
                <Border
                    Padding="16"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid ColumnDefinitions="*,150">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="Next Track" />
                            <TextBlock FontSize="11" Text="Skip to next song" />
                        </StackPanel>
                        <Button
                            Grid.Column="1"
                            Padding="8"
                            Command="{Binding RecordKeyCommand}"
                            CommandParameter="Next">
                            <TextBlock Text="{Binding NextBinding}" />
                        </Button>
                    </Grid>
                </Border>

                <!--  Previous Binding  -->
                <Border
                    Padding="16"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid ColumnDefinitions="*,150">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="Previous Track" />
                            <TextBlock FontSize="11" Text="Skip to previous song" />
                        </StackPanel>
                        <Button
                            Grid.Column="1"
                            Padding="8"
                            Command="{Binding RecordKeyCommand}"
                            CommandParameter="Previous">
                            <TextBlock Text="{Binding PreviousBinding}" />
                        </Button>
                    </Grid>
                </Border>

                <!--  Volume Up Binding  -->
                <Border
                    Padding="16"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid ColumnDefinitions="*,150">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="Volume Up" />
                            <TextBlock FontSize="11" Text="Increase volume" />
                        </StackPanel>
                        <Button
                            Grid.Column="1"
                            Padding="8"
                            Command="{Binding RecordKeyCommand}"
                            CommandParameter="VolumeUp">
                            <TextBlock Text="{Binding VolumeUpBinding}" />
                        </Button>
                    </Grid>
                </Border>

                <!--  Volume Down Binding  -->
                <Border
                    Padding="16"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid ColumnDefinitions="*,150">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="Volume Down" />
                            <TextBlock FontSize="11" Text="Decrease volume" />
                        </StackPanel>
                        <Button
                            Grid.Column="1"
                            Padding="8"
                            Command="{Binding RecordKeyCommand}"
                            CommandParameter="VolumeDown">
                            <TextBlock Text="{Binding VolumeDownBinding}" />
                        </Button>
                    </Grid>
                </Border>

                <!--  Mute Binding  -->
                <Border
                    Padding="16"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid ColumnDefinitions="*,150">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock
                                FontSize="14"
                                FontWeight="SemiBold"
                                Text="Mute" />
                            <TextBlock FontSize="11" Text="Toggle mute" />
                        </StackPanel>
                        <Button
                            Grid.Column="1"
                            Padding="8"
                            Command="{Binding RecordKeyCommand}"
                            CommandParameter="Mute">
                            <TextBlock Text="{Binding MuteBinding}" />
                        </Button>
                    </Grid>
                </Border>

            </StackPanel>

            <!--  Info  -->
            <Border
                Padding="12"
                BorderThickness="1"
                CornerRadius="4">
                <TextBlock
                    FontSize="11"
                    Text="Click a button above to set its keyboard shortcut, then press the key combination you want to use."
                    TextWrapping="Wrap" />
            </Border>

        </StackPanel>
    </ScrollViewer>

</UserControl>