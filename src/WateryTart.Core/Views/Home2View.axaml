<UserControl
          x:Class="WateryTart.Core.Views.Home2View"
          xmlns="https://github.com/avaloniaui"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:app="clr-namespace:WateryTart.Core"
          xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:viewmodels="using:WateryTart.Core.ViewModels"
          d:DesignHeight="450"
          d:DesignWidth="800"
          x:DataType="viewmodels:Home2ViewModel"
          mc:Ignorable="d">

    <UserControl.Styles>
        <!--  This cascades to all children  -->
        <Style Selector="#lbRecommendations ContentPresenter#PART_ContentPresenter:pointerover">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent" />
        </Style>

        <!--  this 'undoes' the cascading  -->
        <Style Selector="ListBox.hoverable ContentPresenter#PART_ContentPresenter:pointerover">
            <Setter Property="Background" Value="#11FFFFFF" />
        </Style>


    </UserControl.Styles>
    <StackPanel Margin="10">

        <!--  Recently played tracks  -->
        <Grid
                  Margin="0,10,10,0"
                  Background="Transparent"
                  ToolTip.Tip="Click to view more recently played">
            <Interaction.Behaviors>
                <EventTriggerBehavior EventName="Tapped">
                    <InvokeCommandAction Command="{Binding RecentlyPlayedTracksCommand}" />
                </EventTriggerBehavior>
            </Interaction.Behaviors>
            <TextBlock Classes="H1" Text="Recently Played" />
            <iconPacks:PackIconMaterial
                      HorizontalAlignment="Right"
                      Classes="H1"
                      Kind="History" />
        </Grid>

        <ItemsControl
                  Padding="0"
                  Background="Transparent"
                  ItemsSource="{Binding RecentTracks}">
            <ItemsControl.Styles>
                <Style Selector="ContentPresenter">
                    <Setter Property="Padding" Value="0,10,0,10" />
                </Style>
            </ItemsControl.Styles>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Album Art  -->
                        <Border
                                  Grid.Column="0"
                                  ClipToBounds="True"
                                  CornerRadius="5">
                            <asyncImageLoader:AdvancedImage
                                      Width="50"
                                      Height="50"
                                      FallbackImage="{x:Static app:App.FallbackImage}"
                                      Loader="{x:Static app:App.ImageLoaderInstance}"
                                      Source="{Binding Path=Track, Converter={StaticResource MetadataImageConverter}}">
                                <Interaction.Behaviors>
                                    <EventTriggerBehavior EventName="Tapped">
                                        <InvokeCommandAction Command="{Binding TrackFullViewCommand}" />
                                    </EventTriggerBehavior>
                                </Interaction.Behaviors>
                            </asyncImageLoader:AdvancedImage>
                        </Border>

                        <!--  Track Info  -->
                        <Grid Grid.Column="1" ColumnDefinitions="Auto,*">
                            <iconPacks:PackIconMaterial
                                      Grid.Column="0"
                                      Width="20"
                                      Height="20"
                                      Margin="5,0,0,0"
                                      VerticalAlignment="Top"
                                      IsVisible="{Binding IsNowPlaying}"
                                      Kind="VolumeHigh" />

                            <TextBlock
                                      Grid.Column="1"
                                      Margin="10,0,0,0"
                                      Text="{Binding Track.Name}"
                                      TextTrimming="CharacterEllipsis" />

                            <TextBlock
                                      Grid.Column="1"
                                      Margin="10,20,0,0"
                                      FontSize="{StaticResource SmallFontSize}"
                                      Foreground="{StaticResource FadedTextColourBrush}"
                                      Text="{Binding Track.Artists[0].Name}"
                                      TextTrimming="CharacterEllipsis" />
                        </Grid>

                        <TextBlock
                                  Grid.Column="2"
                                  Foreground="{StaticResource FadedTextColourBrush}"
                                  Text="{Binding Track.Duration, Converter={StaticResource SecondsToMinutesConverter}}" />

                        <Button
                                  Grid.Column="3"
                                  VerticalAlignment="Top"
                                  Classes="iconButton navButton"
                                  Command="{Binding TrackAltMenuCommand}">
                            <iconPacks:PackIconMaterial
                                      Width="{StaticResource AltMenuSize}"
                                      Height="{StaticResource AltMenuSize}"
                                      Kind="DotsVertical" />
                        </Button>
                    </Grid>

                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


        <!--  Discover Artists  -->
        <Grid Margin="0,40,10,0" Background="Transparent">
            <Interaction.Behaviors>
                <EventTriggerBehavior EventName="Tapped">
                    <InvokeCommandAction Command="{Binding DiscoverArtistsCommand}" />
                </EventTriggerBehavior>
            </Interaction.Behaviors>
            <TextBlock Classes="H1" Text="Discover Artists" />
            <iconPacks:PackIconMaterial
                      HorizontalAlignment="Right"
                      Classes="H1"
                      Kind="ChevronRight" />
        </Grid>

        <ListBox
                  Background="Transparent"
                  ItemsSource="{Binding DiscoverArtists}"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" Spacing="15" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!--  "Medium" Artist Template  -->
                    <StackPanel Background="Transparent" Spacing="10">
                        <Interaction.Behaviors>
                            <EventTriggerBehavior EventName="Tapped">
                                <InvokeCommandAction Command="{Binding ArtistFullViewClicked}" />
                            </EventTriggerBehavior>
                        </Interaction.Behaviors>

                        <Ellipse Width="125" Height="125">
                            <Ellipse.Fill>
                                <ImageBrush asyncImageLoader:ImageBrushLoader.Source="{Binding Path=ArtistThumb, Converter={StaticResource MassImageImageConverter}}" />
                            </Ellipse.Fill>
                        </Ellipse>

                        <TextBlock
                                  HorizontalAlignment="Center"
                                  FontSize="16"
                                  FontWeight="Bold"
                                  Text="{Binding Artist.Name}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!--  Discover Albums  -->
        <Grid Margin="0,40,10,0" Background="Transparent">
            <Interaction.Behaviors>
                <EventTriggerBehavior EventName="Tapped">
                    <InvokeCommandAction Command="{Binding DiscoverAlbumsCommand}" />
                </EventTriggerBehavior>
            </Interaction.Behaviors>
            <TextBlock Classes="H1" Text="Discover Albums" />
            <iconPacks:PackIconMaterial
                      HorizontalAlignment="Right"
                      Classes="H1"
                      Kind="ChevronRight" />
        </Grid>

        <ItemsControl
                  Margin="0,0,0,20"
                  Background="Transparent"
                  ItemsSource="{Binding DiscoverAlbums}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel ItemSpacing="15" ItemWidth="200" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>

                    <!--  "Medium" Album Template  -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border
                                  Grid.Row="0"
                                  Width="180"
                                  Height="180"
                                  Margin="0,0,0,5"
                                  HorizontalAlignment="Center"
                                  BoxShadow="0 0 20 0 #A5000000">
                            <Border ClipToBounds="True" CornerRadius="10">
                                <asyncImageLoader:AdvancedImage
                                          Width="180"
                                          Height="180"
                                          FallbackImage="{x:Static app:App.FallbackImage}"
                                          Loader="{x:Static app:App.ImageLoaderInstance}"
                                          Source="{Binding Path=Album, Converter={StaticResource MetadataImageConverter}}">
                                    <Interaction.Behaviors>
                                        <EventTriggerBehavior EventName="Tapped">
                                            <InvokeCommandAction Command="{Binding AlbumFullViewCommand}" />
                                        </EventTriggerBehavior>
                                    </Interaction.Behaviors>
                                </asyncImageLoader:AdvancedImage>
                            </Border>
                        </Border>

                        <StackPanel Grid.Row="1">
                            <TextBlock
                                      Margin="0,5,0,0"
                                      HorizontalAlignment="Left"
                                      FontSize="14"
                                      FontWeight="Bold"
                                      Text="{Binding Album.Name}"
                                      TextWrapping="WrapWithOverflow" />
                            <TextBlock FontSize="14" Text="{Binding Album.Artists[0].Name}" />

                            <!--                        <TextBlock
                                  FontSize="14"
                                  Foreground="{StaticResource FadedTextColourBrush}"
                                  Text="{Binding Album.Year}" />-->
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


    </StackPanel>
</UserControl>
