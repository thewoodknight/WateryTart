<UserControl
          x:Class="WateryTart.Core.Views.GeneralSettingsView"
          xmlns="https://github.com/avaloniaui"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:converters="using:WateryTart.Core.Converters"
          xmlns:vm="clr-namespace:WateryTart.Core.ViewModels"
          x:DataType="vm:GeneralSettingsViewModel">
    <UserControl.Resources>
        <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
    </UserControl.Resources>
    <StackPanel Margin="20" Spacing="10">
        <TextBlock FontWeight="Bold" Text="Application version" />
        <TextBlock Text="{Binding InstalledVersion}" />

        <TextBlock
                  Margin="0,10,0,0"
                  FontWeight="Bold"
                  Text="Latest version" />
        <TextBlock Text="{Binding LatestVersion}" />

        <TextBlock
                  Margin="0,10,0,0"
                  FontWeight="Bold"
                  Text="Volume events control" />
        <ComboBox ItemsSource="{Binding VolumeEventOptions}" SelectedValue="{Binding SelectedVolumeEvent, Mode=TwoWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBlock TextWrapping="Wrap">
            This only applies to how this install handles volume.
            The default behaviour is 'App Volume' - how most media players work - but if your device directly controls an amplifier, 'System Volume' may be more appropriate.
        </TextBlock>

    </StackPanel>
</UserControl>