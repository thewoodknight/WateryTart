<UserControl
          x:Class="WateryTart.Core.TrackInfoView"
          xmlns="https://github.com/avaloniaui"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:c="clr-namespace:WateryTart.Core.Converters"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:popups="using:WateryTart.Core.ViewModels.Popups"
          xmlns:vm="clr-namespace:WateryTart.Core.ViewModels"
          d:DesignHeight="450"
          d:DesignWidth="800"
          x:DataType="vm:Popups.TrackInfoViewModel"
          mc:Ignorable="d">

    <UserControl.Resources>
        <c:AudioFormatCodecConverter x:Key="AudioFormatCodecConverter" />
        <popups:CodecTypeToImageConverter x:Key="CodecTypeToImageConverter" />
    </UserControl.Resources>
    <Grid
              Margin="30"
              ColumnSpacing="10"
              RowSpacing="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />

        </Grid.RowDefinitions>
        <TextBlock
                  Grid.Row="0"
                  Grid.Column="1"
                  FontWeight="Bold"
                  Text="Input" />

        <!--  Source  -->
        <PathIcon Grid.Row="1" Grid.Column="0" />
        <TextBlock
                  Grid.Row="1"
                  Grid.Column="1"
                  Text="{Binding Item.StreamDetails.Provider}" />
        <!--  needs a converter  -->

        <!--  sample rate/bitdepth  -->
        <Image
                  Grid.Row="2"
                  Grid.Column="0"
                  Width="50"
                  Source="{Binding Streamdetails.AudioFormat.CodecType, Converter={StaticResource CodecTypeToImageConverter}}" />
        <TextBlock
                  Grid.Row="2"
                  Grid.Column="1"
                  VerticalAlignment="Center"
                  Text="{Binding Streamdetails.AudioFormat, Converter={StaticResource AudioFormatCodecConverter}}" />

        <TextBlock
                  Grid.Row="3"
                  Grid.Column="1"
                  FontWeight="Bold"
                  Text="Output" />

        <!--  output DSP  -->
        <PathIcon Grid.Row="4" Grid.Column="0" />
        <TextBlock
                  Grid.Row="4"
                  Grid.Column="1"
                  Text="Input Effects" />

        <!--  output device  -->
        <PathIcon Grid.Row="5" Grid.Column="0" />
        <TextBlock
                  Grid.Row="5"
                  Grid.Column="1"
                  Text="{Binding Item.QueueId}" />
        <!--  needs a converter ?  -->
    </Grid>
</UserControl>
