<ResourceDictionary xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <x:Double x:Key="AltMenuSize">18</x:Double>

    <Color x:Key="FadedTextColour">#FF969696</Color>
    <SolidColorBrush x:Key="FadedTextColourBrush" Color="{StaticResource FadedTextColour}" />

    <x:Double x:Key="H1FontSize">26</x:Double>
    <x:Double x:Key="H2FontSize">22</x:Double>
    <x:Double x:Key="H3FontSize">18</x:Double>

    <x:Double x:Key="NormalFontSize">16</x:Double>
    <x:Double x:Key="SmallFontSize">14</x:Double>

    <x:Double x:Key="H1ChevronSize">22</x:Double>


    <SolidColorBrush x:Key="ErrorBrush">#FFE81123</SolidColorBrush>
    <SolidColorBrush x:Key="SuccessBrush">#107C10</SolidColorBrush>
    <SolidColorBrush x:Key="WarningBrush">#FFA500</SolidColorBrush>


    <!--  sets the global font size  -->
    <x:Double x:Key="ControlContentThemeFontSize">16</x:Double>
</ResourceDictionary>
